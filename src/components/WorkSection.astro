---
import { workLinks } from '../config/profile';
---
<section class="rounded-3xl border border-white/10 bg-slate-900/40 p-8">
	<header class="mb-4">
		<p class="text-sm uppercase tracking-[0.3em] text-slate-400">Work</p>
	</header>
	<div class="grid gap-4 md:grid-cols-3">
		{workLinks.map((link) => (
			<a
				class="group flex items-center gap-3 rounded-2xl border border-white/10 bg-slate-950/60 px-4 py-3 text-left transition hover:border-emerald-400/60"
				href={link.href}
				target={link.external ? '_blank' : undefined}
				rel={link.external ? 'noreferrer' : undefined}
			>
				<span class="flex size-11 items-center justify-center rounded-2xl bg-white/5">
					<img src={link.icon} alt="" width="32" height="32" loading="lazy" class="h-8 w-8" />
				</span>
				<div class="flex flex-col">
					<span class="text-base font-semibold text-white">{link.label}</span>
					{link.description && <span class="text-sm text-slate-300">{link.description}</span>}
				</div>
			</a>
		))}
	</div>
</section>
