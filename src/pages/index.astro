---
import PageLayout from '../layouts/PageLayout.astro';
import HeroSection from '../components/HeroSection.astro';
import StatusTicker from '../components/StatusTicker.astro';
import LinksSection from '../components/LinksSection.astro';
import WorkSection from '../components/WorkSection.astro';
import SocialProofWall from '../components/SocialProofWall.astro';
import BookShelf from '../components/BookShelf.astro';
import SpotifyEmbed from '../components/SpotifyEmbed.astro';
import AdventurePitchForm from '../components/AdventurePitchForm.astro';
import CalEmbed from '../components/CalEmbed.astro';
---
<PageLayout title="Justin Napolitano" description="A social-proof-heavy dating profile landing page">
	<main class="mx-auto flex max-w-5xl flex-col gap-12 px-4 py-12 sm:px-8">
		<HeroSection />
		<StatusTicker />
		<LinksSection />
		<WorkSection />
		<SocialProofWall />
		<BookShelf />
		<SpotifyEmbed />
		<AdventurePitchForm />
		<CalEmbed />
	</main>
</PageLayout>
